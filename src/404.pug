doctype html
html
  head
    title Staff Directory
    link(rel='stylesheet' href='css/style.css')
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet")

  body
    header.v-fall-header.grid
      .v-fall__container.grid.grid-v-center.grid-v-between
        .v-fall-header__logo
          img.v-fall-header__img(src="img/logo-v-fall.png", alt="V-Fall")
        nav.v-fall-header__nav
          a.v-fall-header__link(href="#") Новинки
          a.v-fall-header__link(href="#") Фильмы
          a.v-fall-header__link(href="#") Мультфильмы
          a.v-fall-header__link(href="#") Новости
          a.v-fall-header__link(href="#") Кинотеатры
          a.v-fall-header__link(href="#") Контакты
        form.v-fall-header__search
          input.v-fall-header__input(type="text", placeholder="Найти")
    main.v-fall-main
      .v-fall__container.grid.grid-column.v-fall__container--not-found
        section.v-fall-not-found
          img.v-fall-not-found__img(src="img/404.png", alt="404")
          p.v-fall-not-found__text К сожалению, запрашиваемая страница не найдена
          a.v-fall-not-found__btn.btn.btn-default.btn-link(href="#") На главную
    footer.v-fall-footer.grid
      .v-fall__container.grid.grid-v-center.grid-v-between
        .v-fall-footer__logo
          img.v-fall-footer__img(src="img/logo-v-fall.png", alt="V-Fall")
        nav.v-fall-footer__nav
          a.v-fall-footer__link(href="#") Новинки
          a.v-fall-footer__link(href="#") Фильмы
          a.v-fall-footer__link(href="#") Мультфильмы
          a.v-fall-footer__link(href="#") Новости
          a.v-fall-footer__link(href="#") Кинотеатры
          a.v-fall-footer__link(href="#") Контакты
        form.v-fall-footer__search
          input.v-fall-footer__input(type="text", placeholder="Найти")